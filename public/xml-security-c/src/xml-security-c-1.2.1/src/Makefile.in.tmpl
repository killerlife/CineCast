# All these setting come from the configure script
# We use configure to do most of the hard work as it is more
# designed to handle different system complexity than make
#

DEPFILE=depends

#all these setting come from the arguments passed in to runConfigure.

PLATFORM = @platform@

CC  = @cc@
CXX = @cxx@
CXXFLAGS = @cxxflags@
CPPFLAGS = @cppflags@

PREFIX = @prefix@
LDFLAGS = @ldflags@
OBJSUFFIX = @objsuffix@
SHLIBSUFFIX = @shlibsuffix@

CC1 = @cc1@
CC4 = @cc4@
MAKE_SHARED = @make_shared@
LINK = @link@

######################### Commands ###########################

LN_S = @ln_s@
MKDIR = mkdir -p
CP = cp
INSTALL = @install@
INSTALL_DATA = @install_data@

######################### Directories ###########################

OBJ_FILES=@__DIRECTORY___obj_files@
INCLUDE_FILES=@__DIRECTORY___include_files@
SRC_BASE=__SRCBASEDISTANCE__
XSEC_INCL=-I${SRC_BASE}/../include

OBJDIR=${SRC_BASE}/../lib/obj
INCLUDE_DIR=${SRC_BASE}/../include/xsec/__DIRECTORY_PATH__

prefix = @prefix@
includedir=@includedir@
INSTALL_DIR=${includedir}/xsec/__DIRECTORY_PATH__

########################### Action #############################

compile: ${OBJ_FILES}

includes:
	$(MKDIR) $(INCLUDE_DIR)
	$(CP) -p $(INCLUDE_FILES) $(INCLUDE_DIR)

distclean:
	rm -f Makefile.in
	rm -f Makefile.bak
	rm -f Makefile

install:
	$(INSTALL) -d $(DESTDIR)$(INSTALL_DIR)
	$(INSTALL_DATA) $(INCLUDE_FILES) $(DESTDIR)$(INSTALL_DIR)

# Include Library pattern rules

include ${SRC_BASE}/Makefile.incl
